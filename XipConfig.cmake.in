# Find the XIP includes and library
#
# This file is configured by XIP and used by the UseXIP.cmake module
# to load XIP's settings for an external project.
#
# XIP_INCLUDE_DIR - where to find xip/include
# XIP_LIBRARIES - list of fully qualified libraries to link against
# XIP_FOUND - set to 1 if found

@XIP_CONFIG_CODE@

set(XIP_FOUND 1)

set(XIP_INCLUDE_DIR "@XIP_INCLUDE@")

# The XIP include file directories
set(XIP_INCLUDE_DIRS "@XIP_INCLUDE_DIRS@")

set(XIP_LIBRARIES "@XIP_LIBRARIES@")
set(XIP_LIBRARY_DIR "@XIP_LIBRARY_DIR@")

# The C and C++ flags added by XIP to the cmake-configured flags
set(XIP_REQUIRED_C_FLAGS "@XIP_REQUIRED_C_FLAGS@")
set(XIP_REQUIRED_CXX_FLAGS "@XIP_REQUIRED_CXX_FLAGS@")
set(XIP_REQUIRED_LINK_FLAGS "@XIP_REQUIRED_LINK_FLAGS@")
set(XIP_REQUIRED_EXE_LINKER_FLAGS "@XIP_REQUIRED_EXE_LINKER_FLAGS@")
set(XIP_REQUIRED_SHARED_LINKER_FLAGS "@XIP_REQUIRED_SHARED_LINKER_FLAGS@")
set(XIP_REQUIRED_MODULE_LINKER_FLAGS "@XIP_REQUIRED_MODULE_LINKER_FLAGS@")

# The XIP version number
set(XIP_VERSION_MAJOR "@CPACK_PACKAGE_VERSION_MAJOR@")
set(XIP_VERSION_MINOR "@CPACK_PACKAGE_VERSION_MINOR@")
set(XIP_VERSION_PATCH "@CPACK_PACKAGE_VERSION_PATCH@")

# The location of the UseXIP.cmake file
set(XIP_USE_FILE "@XIP_BINARY_DIR@/UseXIP.cmake")

# The build settings file
set(XIP_BUILD_SETTINGS_FILE "@XIP_BUILD_SETTINGS_FILE@")

# The library dependencies file
set(XIP_LIBRARY_DEPENDS_FILE "@XIP_LIBRARY_DEPENDS_FILE@")

# Whether XIP was built with shared libraries
set(XIP_BUILD_SHARED "@BUILD_SHARED_LIBS@")

# The XIP library dependencies.
if(NOT XIP_NO_LIBRARY_DEPENDS AND
    EXISTS "${XIP_LIBRARY_DEPENDS_FILE}")
  include("${XIP_LIBRARY_DEPENDS_FILE}")
endif(NOT XIP_NO_LIBRARY_DEPENDS AND
  EXISTS "${XIP_LIBRARY_DEPENDS_FILE}")

# Whether XIP was built using DCMTK, ITK and/or VTK.
set(HAS_DCMTK "@HAS_DCMTK@")
set(HAS_ITK   "@HAS_ITK@"  )
set(HAS_VTK   "@HAS_VTK@"  )

# List of XIP examples, data files and GLSL files
set(XIP_EXAMPLES     "@XIP_EXAMPLES@"    )
set(XIP_DATA_FILES   "@XIP_DATA_FILES@"  )
set(XIP_GLSL_FILES   "@XIP_GLSL_FILES@"  )
set(XIP_EXAMPLES_DIR "@XIP_EXAMPLES_DIR@")

# XIP header files to install
set(XIP_SOURCE_DIR            "@XIP_SOURCE_DIR@"           )
set(XIP_HEADER_FILES          "@XIP_HEADER_FILES@"         )
set(XIP_INVENTOR_HEADER_FILES "@XIP_INVENTOR_HEADER_FILES@")
